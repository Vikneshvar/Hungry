<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bazz.studios">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.bazz.studios.application.StarterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">


        <meta-data
            android:name="com.parse.APPLICATION_ID"
            android:value="@string/parse_app_id" />
        <meta-data
            android:name="com.parse.CLIENT_KEY"
            android:value="@string/parse_client_key" />

        <activity
            android:name="com.bazz.studios.activity.HomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bazz.studios.activity.MyInvitesActivity"
            android:label="@string/title_activity_my_invites"></activity>
        <activity
            android:name="com.bazz.studios.activity.IAmHungryActivity"
            android:label="@string/title_activity_iam_hungry"></activity>
        <activity
            android:name="com.bazz.studios.activity.MyFriendsActivity"
            android:label="@string/title_activity_my_friends"></activity>
        <activity
            android:name="com.bazz.studios.activity.LoginActivity"
            android:label="@string/title_activity_login"></activity>
        <activity
            android:name="com.bazz.studios.activity.RegistrationActivity"
            android:label="@string/title_activity_registration"></activity>
    </application>

</manifest>
